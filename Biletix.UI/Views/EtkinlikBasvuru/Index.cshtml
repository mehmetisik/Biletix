                                <input type="text" name="Adres" value="" style="width:350px" /><br />
                                <a>Şehir : </a>
                                <select name="SehirId" style="width:350px">

                                    @foreach (var item in ViewBag.Sehirler)
                                    {
                                        <option name="@item.SehirId" id="@item.SehirId"
                                                value="@item.SehirId">
                                            @item.SehirAd
