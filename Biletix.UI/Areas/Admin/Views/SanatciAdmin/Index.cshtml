                            </div>
                        </div><div class="row"><div class="col-sm-6"><div class="dataTables_info" id="dataTables-example_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div></div><div class="col-sm-6"><div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate"><ul class="pagination"><li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous"><a href="#">Previous</a></li><li class="paginate_button active" aria-controls="dataTables-example" tabindex="0"><a href="#">1</a></li><li class="paginate_button " aria-controls="dataTables-example" tabindex="0"><a href="#">2</a></li><li class="paginate_button " aria-controls="dataTables-example" tabindex="0"><a href="#">3</a></li><li class="paginate_button " aria-controls="dataTables-example" tabindex="0"><a href="#">4</a></li><li class="paginate_button " aria-controls="dataTables-example" tabindex="0"><a href="#">5</a></li><li class="paginate_button " aria-controls="dataTables-example" tabindex="0"><a href="#">6</a></li><li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next"><a href="#">Next</a></li></ul></div></div></div>
                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="panel-body">
    <div class="row">
        <div class="col-lg-6">
            <form role="form">
                <div class="form-group">
                    <label>Sanatçı Adı</label>
                    <input class="form-control" type="text" id="frmSanatçıAdı"> <br /> <br />
                    <label>Sanatçı Soyadı</label>
                    <input class="form-control" type="text" id="frmSanatçıSoyadı">

                    <p class="help-block">Example block-level help text here.</p>
                </div>
                

                <button type="button" class="btn btn-default" onclick="KaydetOrGüncelle(this)" id="KaydetOrGüncelleBtn" >Kaydet</button>
                <button type="reset" class="btn btn-default">Reset Button</button>
            </form>
        </div>
        <!-- /.col-lg-6 (nested) -->
        <!-- /.col-lg-6 (nested) -->
    </div>
    <!-- /.row (nested) -->
</div>

<script src="~/Areas/Admin/Content/bower_components/jquery/dist/jquery.min.js"></script>

<script>
    function KaydetOrGüncelle(gelenBtn)
    {
        
        //3) Kaydet'e basınca inputlar temizlenmiyor
        //inputlarıda asağıda gördün sanırım şurası  123 ve 124 satırlar
        if (gelenBtn.innerText=="Kaydet")
        {
            var SanatçiAdi = document.getElementById("frmSanatçıAdı");
            var SanatçiSoyadi = document.getElementById("frmSanatçıSoyadı");
            //debugger;
            $.ajax({
                url: '@Url.Action("SanatciKaydetGüncelle", "SanatciAdmin")',
                type: 'GET',
                data: {
                    
                    Ad: SanatçiAdi.value, //value demezsen kaydetmiyor hata da vermiyor
                    Soyad:SanatçiSoyadi.value
                },
                success:function(data)
                {
                    var Sanatcılar = document.getElementById("dataTables-example");
                    
                    var htmlSatırlar = '<tr id="' + data.ID + '"class="gradeA odd" role="row"><td class="sorting_1">' + SanatçiAdi.value + '</td><td class="sorting_1">' + SanatçiSoyadi.value + '</td><td class="sorting_1"><a "' + data.ID + '" href="#">Güncelle<a><td><a id="' + data.ID + '"href="#">Sil</a></td></tr>'
                    
                    Sanatcılar.innerHTML += htmlSatırlar;

                    SanatçıAdı.value = "";//burada value çıkaramamıştım gelmedi
                    //javaScripte kod yazarken sık sık kaydet sen kaydetmiyince yukardaki yazdıklarını yani önce yazdıklarını kaydetmezsen cıkmaz bende bunu bu gün öğrendim .
                    SanatçiSoyadi.value = "";
                },

                error: function ()
                {
                    alert("hata")
                }
            })
        }
    }
    function sil(gelen)
    {
        var silinecekID = gelen.attributes["SanatciIdAttributu"].value;
        $.ajax({
            url: '@Url.Action("SanatciSil","SanatciAdmin")',
            type: 'GET',
            data: {
                osman:silinecekID  //burdan actiona gönderdiğin osman'ı  
            },                    //action'dan alırken aynı şekilde alcan

            success: function()
            {
                var silinecekSatır = document.getElementById(silinecekID);
                silinecekSatır.remove();
            },

            error:function()
            {
                alert("Hata");
            }
        })
    }
    
    var güncellenecekSatır;
    var güncellenecekSatanatcıAdı, güncellenecekSanatcıSoyadı;

    function Güncelle(gelen)
    {
        var güncellenecekID = gelen.attributes["SanatciIdAttributu"].value;
        var SanatçıAdı = document.getElementById("frmSanatçıAdı");
        var Sanatçısoyadı = document.getElementById("frmSanatçıSoyadı");

        güncellenecekSatır = document.getElementById(güncellenecekID);
        var KaydetOrGüncelleBtn = document.getElementById("KaydetOrGüncelleBtn");

        $.ajax({
            url: '@Url.Action("SanatcıDüzenle","SanatcıAdmin")',
            type: 'GET',
            data: {
                ID:güncellenecekID
            },
            
            success:function(data)
            {
                SanatçıAdı.value = data.Ad
                SanatçıAdı.attributes["SanatciId"] = data.SanatciId
                KaydetOrGüncelleBtn.innerText = "Güncelle"
                güncellenecekSatanatcıAdı = data.SanatçıAdı;
                güncellenecekSanatcıSoyadı = data.frmSanatçıSoyadı;
            },
            
            error:function()
            {
                alert("Hata")
            }
        })
    }



</script>